<%= form_for @recipe, url: recipes_path do |f| %>
  <% if @recipe.errors.any? %>

  <div class="error_explanations">
   <h2>The following errors are keeping this recipe from being saved <h2>
   <h3><%= pluralize(@recipe.errors.count, "error") %> </h3>
   <ul>
    <% @recipe.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <%end%>
   </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </p>


//this might be wrong

  <p>
    <%= f.fields_for :recipesingredients do |ff| %>
      <ol>
        <table id = "table">
          <tr>
            <td style = "padding-left: 8px"><%= render 'recipes_ingredient_fields', :f => ff %></td>
          </tr>
        </table>
      </ol>
    <% end %>
    <div id = "ingredientsadd"></div>
    <%= link_to_add_ingredient 'Add', f, :recipesingredient, 'data-association-insertion-node' => "#ingredientsadd", 'data-association-insertion-method' => "append" %>
  </p>




  <p>
    <%= f.label :directions, "Directions" %>
    <%= f.text_area  :directions %>
  </p>

  <p>
    <%= f.label :cookTime, "Cook time(in hours please)" %>
    <%= f.text_field :cookTime %>
  </p>

  <p>
    <%= f.label :costOfIngredients, "Estimated cost of ingredients(decimal please) $" %>
    <%= f.text_field :costOfIngredients %>
  </p>

  <p>
    <%= f.label :canPrepareAhead, "Can this be prepared ahead of time?" %>
    <%= f.check_box :canPrepareAhead %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%end%>
