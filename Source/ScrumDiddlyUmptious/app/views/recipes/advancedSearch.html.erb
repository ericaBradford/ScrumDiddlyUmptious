<%= form_tag results_path, :html => { :class => 'form-horizontal' }, :method => :get do %>

  <div class="control-group">
    <%= label_tag "Ingredients (seperate by a comma)" %>
    <%= text_field_tag :ingredients %>
  </div>

  <div class="control-group">
    <%= label_tag "Cost of Ingredients $" %>
    <%= text_field_tag :costIngredients %>
  </div>

  <div class="control-group">
    <%= label_tag "Number of Ingredients" %>
    <%= text_field_tag :numIngredients %>
  </div>

  <div class="control-group">
    <%= label_tag "Cook Time" %>
    <%= text_field_tag :cookTime %>
  </div>

  <div class="control-group">
    <%= label_tag "Rating" %>
    <%= select_tag :rating, options_for_select(%w[5 4 3 2 1]), :include_blank => true %>
  </div>

  <div class="control-group">
    <%= label_tag "Classification of Cooking" %>
    <%= select_tag :classification, options_for_select(%w[barbecue crock-pot microwave smoker steamer stove-top toaster oven]), :include_blank => true %>
  </div>

  <div class="control-group">
    <%= label_tag "Cookware" %>
    <%= select_tag :cookware, options_for_select(%w[baking-pan beanpot blender chip-pan cookie-sheet cooking-pot crepe-pan double-boiler doufeu dutch-oven food-processor frying-pan griddle karahi kettle pressure-cooker ramekin roasting-pan roasting-rack saucepan saute-pan stockpot]), :include_blank => true %>
  </div>

  <div class="control-group">
    <%= label_tag "Category" %>
    <%= select_tag :category, options_for_select(%w[appetizer beverage breakfast dessert dinner lunch side-dish snack]), :include_blank => true %>
  </div>

  <div class="control-group">
    <%= label_tag "Can be Prepared Ahead of Time" %>
    <%= check_box_tag :prepareAhead %>
  </div>

  <div class="control-group">
    <%= label_tag "Blacklist Ingredients (seperate by comma)" %>
    <span>(note: your food preferences are already included in this)</span>
    <%= text_field_tag :blacklist %>
  </div>

  <div class="form-actions">
    <%= submit_tag "Search", :name => nil, :class => "btn btn-primary" %>
  </div>


<% end %>
