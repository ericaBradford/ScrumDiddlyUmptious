<%- model_class = Recipe -%>
<table class="table table-striped recipe-table">
  <tbody>
    <% @recipes.each do |recipe| %>
        <tr>
        <row>
            <td class="span2">
              <%= image_tag recipe.picture.url(:thumb) %>
            </td>
            <td class="span3">
              <ul class="recipe-info">
                <li><h4><%= link_to recipe.title, recipe_path(recipe) %></h4></li>
                <li>
                  <%= model_class.human_attribute_name(:cookTime) %>:
                  <%= recipe.cookTime.downcase %>
                </li>
                <li>
                  <%= model_class.human_attribute_name(:costOfIngredients) %>:
                  $<%= number_with_precision(recipe.costOfIngredients, :precision=>2) %>
                </li>
                <li>
                  <%= rating_for recipe, "Rating", :disable_after_rate => false %>
                </li>
            </td>
            <td class="span5">
              <span><%= recipe.description %></span>
            </td>
        <row>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @recipes, :container => false, :params => { :search_text => params[:search_text]} %>

<% if user_signed_in? %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_recipe_path,
            :class => 'btn btn-default', data: {no_turbolink: true}  %>
<% end %>

<%= debug params[:category] %>
