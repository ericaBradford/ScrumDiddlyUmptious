<%= form_for @recipe, class: "center" do |f|%>
  <% if @recipe.errors.any? %>

  <div class="error_explanations">
   <h2>The following errors are keeping this recipe from being saved <h2>
   <h3><%= pluralize(@recipe.errors.count, "error") %> </h3>
   <ul>
    <% @recipe.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <%end%>
   </ul>
  </div>
  <% end %>

  <div class="form_item center">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="form_item center">
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
  </div>


  <div class="form_item center">
    <%= f.label :directions, "Directions" %>
    <%= f.text_area  :directions %>
  </div>

  <div class="form_item center">
    <%= f.label :cookTime, "Cook time" %>
    <%= f.text_field :cookTime %>
  </div>

  <div class="form_item center">
    <%= f.label :costOfIngredients, "Estimated cost of ingredients $" %>
    <%= f.text_field :costOfIngredients, :value => (number_with_precision(f.object.costOfIngredients, :precision => 2) || 0) %>
  </div>

  <div class="form_item center">
    <%= f.label :canPrepareAhead, "Can this be prepared ahead of time?" %>
    <%= f.check_box :canPrepareAhead %>
  </div>

<%= f.hidden_field :id_Users, :value => current_user.id %>

  <div class="form_item center">
    <%= f.submit %>
  </div>
<%end%>
