<%= form_for @user, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> errors:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, autofocus: true, :class => 'text_field' %>
    </div
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true, :class => 'text_field' %>
    </div
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %> <i>(leave blank if you don't want to change it)</i>
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off", :class => 'text_field'  %>
    </div>
  </div>

  <div class="controls">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'text_field'  %>
    </div>
  </div>

  <div class="controls">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <div class="controls">
      <%= f.password_field :current_password, autocomplete: "off", :class => 'text_field'  %>
    </div>
  </div>

  <div class="controls">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <% if current_user.role == "admin" %>
    <div class="control-group">
      <%= f.label :role, :class => 'control-label' %>
      <%= f.select :role, options_for_select(%w[member admin banned inactive]) %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>


