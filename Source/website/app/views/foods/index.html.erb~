  <%= link_to 'New food', new_food_path %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>

  <% @foods.each do |food| %>
    <tr>
      <td><%= link_to food.foodName, food_path(food) %></td>
      <td><%= food.description %></td>
      <% if current_user %>
        <% if current_user.id == food.id_Users %>
          <td><%= link_to 'Edit', edit_food_path(food) %></td>
          <td><%= link_to 'Delete', food_path(food), method: :delete, data: {confirm: 'Are you sure?' }%></td>
       <% end %>
     <% end %>
    </tr>
  <% end %>
